<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <layer-list>
            <!-- Pressed Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#20000000" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <!-- Pressed Background -->
            <item 
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neo_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
    <item>
        <layer-list>
            <!-- Normal Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#10000000" />
                    <corners android:radius="28dp" />
                </shape>
            </item>
            <!-- Normal Background -->
            <item 
                android:top="4dp"
                android:left="4dp"
                android:right="4dp"
                android:bottom="8dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/neo_light" />
                    <corners android:radius="24dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    
</selector>
