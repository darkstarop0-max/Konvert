<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="240dp"
    android:height="240dp"
    android:viewportWidth="240"
    android:viewportHeight="240">
    
    <!-- Background circle -->
    <path
        android:pathData="M120,20 A100,100 0 1,1 120,220 A100,100 0 1,1 120,20 Z"
        android:fillColor="@color/accent_light"
        android:fillAlpha="0.1" />
    
    <!-- Lightning bolt -->
    <group android:translateX="120" android:translateY="120">
        <path
            android:pathData="M-15,-40 L5,-10 L-5,-10 L15,40 L-5,10 L5,10 Z"
            android:fillColor="@color/accent"
            android:strokeColor="@color/accent_dark"
            android:strokeWidth="1" />
        
        <!-- Speed lines -->
        <path
            android:pathData="M-40,-20 L-25,-20"
            android:strokeColor="@color/primary"
            android:strokeWidth="3"
            android:strokeLineCap="round" />
        <path
            android:pathData="M-35,-10 L-20,-10"
            android:strokeColor="@color/primary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
        <path
            android:pathData="M-30,0 L-15,0"
            android:strokeColor="@color/primary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
        
        <path
            android:pathData="M25,10 L40,10"
            android:strokeColor="@color/primary"
            android:strokeWidth="3"
            android:strokeLineCap="round" />
        <path
            android:pathData="M20,20 L35,20"
            android:strokeColor="@color/primary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
        <path
            android:pathData="M15,30 L30,30"
            android:strokeColor="@color/primary"
            android:strokeWidth="2"
            android:strokeLineCap="round" />
    </group>
    
    <!-- Progress indicator -->
    <group android:translateX="120" android:translateY="180">
        <!-- Progress bar background -->
        <path
            android:pathData="M-40,0 L40,0"
            android:strokeColor="@color/stroke_color"
            android:strokeWidth="4"
            android:strokeLineCap="round" />
        
        <!-- Progress bar fill -->
        <path
            android:pathData="M-40,0 L20,0"
            android:strokeColor="@color/accent"
            android:strokeWidth="4"
            android:strokeLineCap="round" />
    </group>
    
</vector>
