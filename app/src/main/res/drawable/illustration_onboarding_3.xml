        <path
            android:pathData="M0,-45 C-25,-40 -40,-25 -40,0 C-40,30 -20,45 0,50 C20,45 40,30 40,0 C40,-25 25,-40 0,-45 Z"
            android:fillColor="@color/primary"
            android:strokeColor="@color/primary_dark"
            android:strokeWidth="2" />
        
        <!-- Shield highlight -->
        <path
            android:pathData="M0,-43 C-20,-38 -35,-25 -35,0 C-35,25 -18,38 0,43"
            android:fillColor="@color/primary_light"
            android:fillAlpha="0.3" />
        
        <!-- Lock icon inside shield -->
        <group android:translateX="0" android:translateY="5">
            <!-- Lock body -->
            <path
                android:pathData="M-12,0 L12,0 C14,0 15,1 15,3 L15,18 C15,20 14,21 12,21 L-12,21 C-14,21 -15,20 -15,18 L-15,3 C-15,1 -14,0 -12,0 Z"
