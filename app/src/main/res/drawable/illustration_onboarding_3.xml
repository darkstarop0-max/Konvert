            <!-- Lock shackle -->
            <path
                android:pathData="M-8,-15 C-8,-20 -4,-24 0,-24 C4,-24 8,-20 8,-15 L8,-5"
                android:strokeColor="@android:color/white"
                android:strokeWidth="3"
                android:fillType="nonZero"
                android:strokeLineCap="round" />
            
            <!-- Keyhole -->
            <path
                android:pathData="M0,5 A3,3 0 1,1 0,11 A3,3 0 1,1 0,5 Z"
                android:fillColor="@color/primary" />
            <path
                android:pathData="M-1,11 L1,11 L1,16 L-1,16 Z"
                android:fillColor="@color/primary" />
        </group>
    </group>
    
    <!-- Privacy dots -->
    <group android:translateX="120" android:translateY="60">
        <path android:pathData="M-20,-3 A3,3 0 1,1 -20,3 A3,3 0 1,1 -20,-3 Z" android:fillColor="@color/accent" android:fillAlpha="0.6" />
        <path android:pathData="M0,-3 A3,3 0 1,1 0,3 A3,3 0 1,1 0,-3 Z" android:fillColor="@color/accent" android:fillAlpha="0.8" />
        <path android:pathData="M20,-3 A3,3 0 1,1 20,3 A3,3 0 1,1 20,-3 Z" android:fillColor="@color/accent" />
    </group>
    
    <!-- Checkmarks -->
    <group android:translateX="80" android:translateY="180">
        <path
            android:pathData="M-3,0 L0,3 L6,-3"
            android:strokeColor="@color/success"
            android:strokeWidth="3"
            android:strokeLineCap="round"
            android:strokeLineJoin="round" />
    </group>
    
    <group android:translateX="160" android:translateY="180">
        <path
            android:pathData="M-3,0 L0,3 L6,-3"
            android:strokeColor="@color/success"
            android:strokeWidth="3"
            android:strokeLineCap="round"
            android:strokeLineJoin="round" />
    </group>
    
