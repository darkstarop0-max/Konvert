<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#10000000" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Main Background -->
    <item 
        android:top="4dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/neo_light" />
            <corners android:radius="24dp" />
        </shape>
    </item>
    
    <!-- Inner Shadow -->
    <item 
        android:top="6dp"
        android:left="6dp"
        android:right="6dp"
        android:bottom="10dp">
        <shape android:shape="rectangle">
            <stroke 
                android:width="1dp" 
                android:color="@color/neo_shadow_light" />
            <corners android:radius="22dp" />
        </shape>
    </item>
    
</layer-list>
