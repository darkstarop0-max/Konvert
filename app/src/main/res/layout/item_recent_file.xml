<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/recent_file_selector"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="16dp"
    android:paddingVertical="16dp"
    android:layout_marginBottom="8dp">

    <!-- File Icon -->
    <androidx.cardview.widget.CardView
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/recent_file_icon_bg">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:contentDescription="File type icon"
            android:tint="@color/primary"
            tools:src="@drawable/ic_description" />

    </androidx.cardview.widget.CardView>

    <!-- File Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="document_converted.pdf" />

        <TextView
            android:id="@+id/file_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:alpha="0.7"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="2 hours ago" />

    </LinearLayout>

    <!-- Action Button -->
    <ImageView
        android:id="@+id/file_action"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="@color/text_secondary"
        android:alpha="0.5"
        android:contentDescription="Open file" />

</LinearLayout>
