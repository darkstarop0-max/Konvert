<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/surface"
    android:paddingHorizontal="32dp">

    <!-- Enhanced illustration container -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardIllustration"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginTop="40dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textTitle"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:id="@+id/imageOnboarding"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="24dp"
            android:contentDescription="@string/onboarding_image_description"
            android:scaleType="centerInside" />

    </androidx.cardview.widget.CardView>

    <!-- Enhanced title -->
    <TextView
        android:id="@+id/textTitle"
        style="@style/TextAppearance.Konvert.Headline1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="4dp"
        android:maxLines="2"
        android:textColor="@color/text_primary"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textDescription"
        app:layout_constraintTop_toBottomOf="@id/cardIllustration" />

    <!-- Enhanced description -->
    <TextView
        android:id="@+id/textDescription"
        style="@style/TextAppearance.Konvert.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha="0.85"
        android:gravity="center"
        android:letterSpacing="-0.01"
        android:lineSpacingMultiplier="1.4"
        android:maxLines="3"
        android:textColor="@color/text_secondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textTitle" />

    <!-- Floating elements for visual interest -->
    <View
        android:id="@+id/floatingElement1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:alpha="0.3"
        android:background="@drawable/floating_element"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/floatingElement2"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="60dp"
        android:alpha="0.2"
        android:background="@drawable/floating_element"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/floatingElement3"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginStart="80dp"
        android:layout_marginBottom="100dp"
        android:alpha="0.25"
        android:background="@drawable/floating_element"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
