<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/quick_action_selector"
    android:clickable="true"
    android:focusable="true"
    android:paddingHorizontal="20dp"
    android:paddingVertical="20dp">

    <!-- Icon Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/quick_action_icon_bg">

        <ImageView
            android:id="@+id/quick_action_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:contentDescription="Quick action icon"
            android:tint="@color/primary"
            tools:src="@drawable/ic_text_fields" />

    </androidx.cardview.widget.CardView>

    <!-- Label -->
    <TextView
        android:id="@+id/quick_action_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Text" />

</LinearLayout>
