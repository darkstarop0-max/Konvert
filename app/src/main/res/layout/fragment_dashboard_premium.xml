<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/premium_gradient_background"
    android:fillViewport="true"
    tools:context=".ui.dashboard.DashboardFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="32dp">

        <!-- Floating Glass Header Bar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/header_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/glass_card_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/glass_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="28dp"
                android:paddingVertical="24dp"
                android:gravity="center">

                <!-- App Title with Luxury Serif Font -->
                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konvert"
                    android:textColor="@color/text_primary"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:fontFamily="serif"
                    android:elevation="2dp" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/app_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Your universal converter."
                    android:textColor="@color/text_secondary"
                    android:textSize="16sp"
                    android:alpha="0.9"
                    android:letterSpacing="0.02"
                    android:fontFamily="sans-serif-light" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Hero Greeting -->
        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Welcome back!"
            android:textColor="@color/text_primary"
            android:textSize="24sp"
            android:textStyle="normal"
            android:letterSpacing="0.01"
            android:fontFamily="sans-serif-light"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_card" />

        <!-- Main Conversion Hub - 2x3 Grid -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/conversion_grid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcome_text">

            <!-- Row 1 -->
            <!-- Text Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_text"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toTopOf="@+id/btn_audio"
                app:layout_constraintEnd_toStartOf="@+id/btn_images"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_text_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_text_fields"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Text"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Images Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_images"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toTopOf="@+id/btn_video"
                app:layout_constraintEnd_toStartOf="@+id/btn_compression"
                app:layout_constraintStart_toEndOf="@+id/btn_text"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_images_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_image"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Images"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Compression Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_compression"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toTopOf="@+id/btn_more"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_images"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_compression_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_compress"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Compression"
                        android:textColor="@color/text_primary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Row 2 -->
            <!-- Audio Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_audio"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_video"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_text">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_audio_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_audiotrack"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Audio"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Video Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_video"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_more"
                app:layout_constraintStart_toEndOf="@+id/btn_audio"
                app:layout_constraintTop_toBottomOf="@+id/btn_images">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_video_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_movie"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Video"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- More Button -->
            <androidx.cardview.widget.CardView
                android:id="@+id/btn_more"
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/neumorphic_button_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="24dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/neo_light"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_video"
                app:layout_constraintTop_toBottomOf="@+id/btn_compression">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <View
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/gradient_more_bg"
                        android:elevation="4dp" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginTop="-44dp"
                        android:src="@drawable/ic_more_vert"
                        android:tint="@android:color/white"
                        android:elevation="6dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="+More"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Recent Files Section -->
        <TextView
            android:id="@+id/recent_files_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Recent Files"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="normal"
            android:letterSpacing="0.01"
            android:fontFamily="sans-serif-light"
            android:alpha="0.9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/conversion_grid" />

        <!-- Recent Files List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recent_files_recycler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:nestedScrollingEnabled="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recent_files_title"
            tools:itemCount="3"
            tools:listitem="@layout/item_recent_file_premium" />

        <!-- Empty State for Recent Files -->
        <LinearLayout
            android:id="@+id/empty_state_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recent_files_title">

            <View
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/gradient_more_bg"
                android:alpha="0.3" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="-60dp"
                android:src="@drawable/ic_folder_outline"
                android:tint="@android:color/white"
                android:alpha="0.8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="No recent files"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:alpha="0.7"
                android:fontFamily="sans-serif-light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Start converting files to see them here"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:alpha="0.6"
                android:fontFamily="sans-serif-light" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
